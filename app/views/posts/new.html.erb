<h1>新規投稿</h1>

  <%= form_with(model: @post, local: true) do |f| %>
    <%= render 'shared/error_messages' %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, placeholder: "タイトル" %>
    </p>
    
    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content, placeholder: "内容" %>
    </p>
    
    <p>
      <%= f.submit %>
    </p>

  <% end %>

